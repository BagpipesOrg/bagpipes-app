{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./",
    "outDir": "./build",
    "rootDir": "./src",
    "allowJs": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/components/Bagpipes/buttons/buttonDescriptions.jsx","src/**/*.json", "src/components/Icons/Icons.jsx" ],
  "exclude": ["vite.config.js", "node_modules"]
}
