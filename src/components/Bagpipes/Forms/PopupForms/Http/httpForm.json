          "hasToggle": true,
          "options": [
            {
              "label": "GET",
              "value": "get"
            },
            {
              "label": "POST",
              "value": "post"
            },
            {
              "label": "PUT",
              "value": "put"
            },
            {
              "label": "DELETE",
              "value": "delete"
            },
            {
              "label": "PATCH",
              "value": "patch"
            },
            {
              "label": "HEAD",
              "value": "head"
            },
            {
              "label": "OPTIONS",
              "value": "options"
            }
          ]
        }
      ]
    },
    {
      "title": "Headers",
      "fields": [
        {
          "key": "headers",
          "type": "items",
          "label": "Headers",
          "hasToggle": true
        }
      ]
    },
    {
      "title": "Query Parameters",
      "fields": [
        {
          "key": "queryParameters",
          "type": "items",
          "label": "Query Parameters",
          "hasToggle": true
        }
      ]
    },
    {
      "title": "Body Type",
      "fields": [
        {
          "key": "bodyType",
          "type": "select",
          "label": "Body Type",
          "options": [
            {
              "label": "Empty",
              "value": "empty"
            },
            {
              "label": "Raw",
              "value": "raw",
              "children": [
                {
                  "title": "Content Type",
                  "fields": [
                    {
                      "key": "contentType",
                      "type": "select",
                      "parentKey": "bodyType",
                      "parentValue": "raw",
                      "label": "Content Type",
                      "options": [
                        {
                          "label": "Text (text/plain)",
                          "value": "text"
                        },
                        {
                          "label": "JSON (application/json)",
                          "value": "json"
                        },
                        {
                          "label": "XML (application/xml)",
                          "value": "xml"
                        },
                        {
                          "label": "HTML (text/html)",
                          "value": "html"
                        },
                        {
                          "label": "Custom",
                          "value": "custom",
                          "children": [
                            {
                              "title": "Value",
                              "fields": [
                                {
                                  "key": "value",
                                  "type": "input",
                                  "label": "Value",
                                  "parentKey": "contentType",
                                  "parentValue": "custom"
                                }
                              ]
                            }
                          ]
                        }
                      ]
                    }
                  ]
                },
                {
                  "title": "Request Content",
                  "fields": [
                    {
                      "key": "requestContent",
                      "type": "input",
                      "label": "Request Content",
                      "parentValue": "raw",
                      "parentKey": "bodyType"
                    }
                  ]
                }
              ]
            },
            {
              "label": "Multipart Form Data",
              "value": "form-data",
              "children": [
                {
                  "title": "Body Fields Items",
                  "fields": [
                    {
                      "key": "bodyFieldsItems",
                      "type": "items",
                      "label": "Fields",
                      "hasToggle": true,
                      "fieldTypes": true,
                      "parentValue": "form-data",
                      "parentKey": "bodyType"

                    }
                  ]
                }
              ]
            },
            {
              "label": "Form URL Encoded",
              "value": "url-encoded",
              "children": [
                {
                  "title": "Body Fields (File and Text)",
                  "fields": [
                    {
                      "key": "bodyFieldsFileText",
                      "type": "items",
                      "label": "Fields",
                      "hasToggle": true,
                      "parentValue": "url-encoded",
                      "parentKey": "bodyType"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
